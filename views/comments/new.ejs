<% include ../partials/header %>

<style>
    h1{
        text-align:center;
    }
</style>
<div class="container">
    <div class="row">
        <h1>Add New Comment to <%= campground.name%></h1>
        <form action= "/campgrounds/<%= campground._id %>/comments" method="POST" style="width:30%; margin:25px auto;">
            <div class="form-group">
                <textarea rows=10 class="form-control" name="comment[text]" placeholder="Commnt Here"></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit">
            </div>
            <a href="/campgrounds">Back</a>
        </form>
    </div>
</div>

<% include ../partials/footer %>