<% include ../partials/header %>
<style>
    h1{
        text-align:center;
    }
</style>
<div class="container">
    <div class="row">
        
        <h1>Edit <%= ground.name%></h1>
        <form action= "/campgrounds/<%= ground._id%>?_method=PUT" method="POST" style="width:30%; margin:25px auto;">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value=<%= ground.name%>>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="price" value=<%= ground.price%>>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="url" value=<%= ground.image%>>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="desc" rows=10 ><%= ground.description%></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit">
            </div>
            <a href="/campgrounds">Back</a>
        </form>
        
    </div>
</div>

<% include ../partials/footer%>