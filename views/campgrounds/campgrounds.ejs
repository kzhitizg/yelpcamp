<% include ../partials/header %>

<div class="container">
    <style>
        img{
            height:300px;
            width: 500px;
        }
    </style>

    <header class="jumbotron">
        <div class="container">
            
        
            <h1>YelpCamp</h1>
            <p>A Campgrounds browsing site</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">New Campground</a>
        </div>
    </header>

    <div class="row" style="display:flex; flex-wrap:wrap; text-align:center;">
        <% campgrounds.forEach(function (ground){ %>
            <div class="col-md-3 col-sm-6">
                
                <div class="thumbnail">
                    <img src= "<%= ground.image %>">
                    <div class="caption">
                        <h4><%= ground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= ground.id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include ../partials/footer %>